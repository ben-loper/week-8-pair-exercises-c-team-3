@model AlienWeightModel

@{
    ViewData["Title"] = "Alien Weight";
}

@section StyleSheet {
    <link rel="stylesheet" type="text/css" href="~/css/AlientWeightIndex.css" />
}

<section class="centeredPanel">
    <h1 class="page-title">Alien Weight Calculator</h1>
    <div class="input-form">
        <form asp-controller="Calculators" asp-action="AlienWeightResult" method="get">

            <div>
                <label asp-for="SelectedPlanet"></label>
                <select asp-for="SelectedPlanet" asp-items="AlienWeightModel.Planets"></select>
            </div>

            <div>
                <label asp-for="EarthWeight"></label>
                <input type="number" asp-for="EarthWeight" class="earth-weight-input" />
            </div>

            <input type="submit" value="Calculate Weight" class="submit-btn" />

        </form>
    </div>
</section>