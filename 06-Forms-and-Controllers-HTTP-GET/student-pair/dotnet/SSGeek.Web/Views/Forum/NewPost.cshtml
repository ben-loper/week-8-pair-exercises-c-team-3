@model ForumPost
@{
    ViewData["Title"] = "NewPost";
}

@section StyleSheet {
    <link rel="stylesheet" href="~/css/ForumNewPost.css" />
}

<section class="centeredPanel">
    <h2>New Geek Post</h2>
    <form asp-controller="Forum" asp-action="NewPost" method="post">

        <div class="input-row">
            <label asp-for="Username"></label>
            <input asp-for="Username" />
            <span class="validation" asp-validation-for="Username"></span>
        </div>

        <div class="input-row">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" />
            <span class="validation" asp-validation-for="Subject"></span>
        </div>

        <div class="input-row">
            <label asp-for="Message"></label>
            @*<input asp-for="Message" />*@
            <textarea asp-for="Message"></textarea>
            <span class="validation" asp-validation-for="Message"></span>
        </div>

        <input type="submit" value="Sumbit!" />
    </form>
</section>