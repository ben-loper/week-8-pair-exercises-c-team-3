@model List<Product>

@{
    ViewData["Title"] = "Index";
}

@*@section StyleSheet {
    <link rel="stylesheet" type="text/css" href="~/css/ForumIndex.css" />
}*@

<section class="centeredPanel">
    <h2>Solar System Geek Gift Shop</h2>

    <div class="product">
        @foreach (Product product in Model)
        {
            <a asp-action="Detail" asp-controller="Store"asp-route-ProductId="@product.ProductId"><img src="~/images/@product.ImageName" class="productImage" /></a>
            <p class="name">@product.Name</p>
            <p class="price">@product.Price</p>
        }
    </div>
</section>